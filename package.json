    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "moment": "^2.24.0",
    "mongoose": "^5.4.10",
    "peer": "^0.5.3",
    "peerjs": "^1.3.1",
    "serve": "^11.3.2",
    "simple-peer": "^9.7.2",
    "socket.io": "^2.2.0"
